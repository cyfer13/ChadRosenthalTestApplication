
@{
    Layout = null;
    var title = ViewData["Title"] != null ? ViewData["Title"] + " | Chad Rosenthal" : "Chad Rosenthal";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@title</title>
    <link href="https://fonts.googleapis.com/css?family=Karla" rel="stylesheet">
    <environment names="Development">
        <link rel="stylesheet" href="~/css/source/site.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/css/minified/bundled.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <div class="wrapper">
        <header>
            <h1>Chad Rosenthal Site</h1>
        </header>
        <nav>
            <ul>
                <li><a is-active-route asp-page="/index">Home</a></li>
                <li><a is-active-route asp-page="/news" asp-route-slug="">News</a></li>
                <li><a is-active-route asp-page="/about">About</a></li>
                <li><a is-active-route asp-page="/test123" asp-area="test">Area Test</a></li>
            </ul>
        </nav>

        <aside>
            Aside
        </aside>
        <main>
            @RenderBody()

        </main>
        <footer>Footer</footer>
    </div>
</body>
</html>
